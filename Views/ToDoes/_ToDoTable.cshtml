@model IEnumerable<TrelloClone.Models.ToDo>
@{
    ViewBag.Title = "_ToDoTable";
}

<h2>My ToDo List</h2>
<div id="progressBarToDo">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width:@(Html.AttributeEncode( ViewBag.Percent))%">
            <p>@(ViewBag.Percent)%</p>
        </div>
    </div>
    
    </div>

<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)

                }
                else
                {
                <div class="CompletedToDo">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id=item.Id, @class="ActiveCheck"})
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/CustomScripts/AddCheckboxListener.js"></script>